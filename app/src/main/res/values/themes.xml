<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme for API level specific attributes -->
    <style name="Theme.Base" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <!-- Application theme with all common  attributes -->
    <style name="Theme.App" parent="Theme.Base">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/widow_background</item>
        <item name="searchViewStyle">@style/Widget.SearchView</item>
    </style>

    <!-- Theme for toolbar -->
    <style name="Theme.App.Toolbar" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
    </style>

</resources>

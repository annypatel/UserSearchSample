<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/search_item_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/search_item_avatar_width"
        android:layout_height="@dimen/search_item_avatar_height"
        android:layout_marginEnd="@dimen/search_item_avatar_right_margin"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDisplayName"
            style="@style/Widget.SearchItem.DisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtUsername"
            style="@style/Widget.SearchItem.UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1" />
    </LinearLayout>

</LinearLayout>